{
  "name": "supabase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/supabase/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/supabase",
        "main": "libs/supabase/src/index.ts",
        "tsConfig": "libs/supabase/tsconfig.lib.json",
        "assets": ["libs/supabase/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/supabase/jest.config.ts"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase start",
        "cwd": "libs/supabase"
      }
    },

    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase stop",
        "cwd": "libs/supabase"
      }
    },
    "status": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase status",
        "cwd": "libs/supabase"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase gen types typescript --local --schema public,chat > ../core/supabase/src/types.ts",
        "cwd": "libs/supabase"
      }
    },
    "reset": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase db reset && supabase start",
        "cwd": "libs/supabase"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "supabase link --project-ref $NEXT_PUBLIC_SUPABASE_PROJECT_ID && supabase db push",
        "cwd": "libs/supabase",
        "envFile": ".env"
      }
    }
  },
  "tags": []
}
