{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zix/api": ["libs/api/src/index.ts"],
      "@zix/app/providers/admin": ["libs/app/providers/admin/src/index.ts"],
      "@zix/app/providers/mobile": ["libs/app/providers/mobile/src/index.ts"],
      "@zix/app/providers/website": ["libs/app/providers/website/src/index.ts"],
      "@zix/app/themes/admin": ["libs/app/themes/admin/src/index.ts"],
      "@zix/app/themes/mobile": ["libs/app/themes/mobile/src/index.ts"],
      "@zix/app/themes/shared": ["libs/app/themes/shared/src/index.ts"],
      "@zix/app/themes/website": ["libs/app/themes/website/src/index.ts"],
      "@zix/core/providers": ["libs/core/providers/src/index.ts"],
      "@zix/core/supabase": ["libs/core/supabase/src/index.ts"],
      "@zix/core/theme": ["libs/core/theme/src/index.ts"],
      "@zix/core/utils": ["libs/core/utils/src/index.ts"],
      "@zix/features/auth": ["libs/features/auth/src/index.ts"],
      "@zix/supabase": ["libs/supabase/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
